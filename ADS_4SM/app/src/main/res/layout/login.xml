<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soaresBackground">

    <ImageView
        android:id="@+id/imageViewBanner"
        android:layout_width="319dp"
        android:layout_height="133dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="464dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_campo_login"
        android:layout_width="320dp"
        android:layout_height="27dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="313dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="391dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/campo_usuario"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="341dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_campo_password"
        android:layout_width="320dp"
        android:layout_height="27dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="301dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/campo_password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="251dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botao_login"
        android:layout_width="263dp"
        android:layout_height="49dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="162dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/botao_lembrar"
        android:layout_width="248dp"
        android:layout_height="33dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="569dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="129dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensagem_login"
        android:layout_width="320dp"
        android:layout_height="27dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="437dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mensagem_erro_login"
        android:layout_width="259dp"
        android:layout_height="20dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="219dp"
        android:textAlignment="center"
        android:textColor="@color/alertRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>